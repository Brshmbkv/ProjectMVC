@model Order
<div class="container mt-4" style="width: 700px;">
    <form asp-action="Checkout" method="post" role="form">
        <h4>You're just one step away from to order course</h4>
        <div class="text-danger" asp-validation-summary="All"></div>

        <div class="form-group row">
            <label asp-for="LastName" class="col-sm-3"></label>
            <div class="col-sm-9">
                <input asp-for="LastName" class="form-control" />
            </div>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <label asp-for="FirstName" class="col-sm-3"></label>
            <div class="col-sm-9">
                <input asp-for="FirstName" class="form-control" />
            </div>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <label asp-for="AddressLine1" class="col-sm-3"></label>
            <div class="col-sm-9">
                <input asp-for="AddressLine1" class="form-control" />
            </div>
            <span asp-validation-for="AddressLine1" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <label asp-for="AddressLine2" class="col-sm-3"></label>
            <div class="col-sm-9">
                <input asp-for="AddressLine2" class="form-control" />
            </div>
            <span asp-validation-for="AddressLine2" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <label asp-for="ZipCode" class="col-sm-3"></label>
            <div class="col-sm-9">
                <input asp-for="ZipCode" class="form-control" />
            </div>
            <span asp-validation-for="ZipCode" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <label asp-for="City" class="col-sm-3"></label>
            <div class="col-sm-9">
                <input asp-for="City" class="form-control" />
            </div>
            <span asp-validation-for="City" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <label asp-for="State" class="col-sm-3"></label>
            <div class="col-sm-9">
                <input asp-for="State" class="form-control" />
            </div>
            <span asp-validation-for="State" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <label asp-for="Country" class="col-sm-3"></label>
            <div class="col-sm-9">
                <input asp-for="Country" class="form-control" />
            </div>
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <label asp-for="PhoneNumber" class="col-sm-3"></label>
            <div class="col-sm-9">
                <input asp-for="PhoneNumber" class="form-control" />
            </div>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <label asp-for="Email" class="col-sm-3"></label>
            <div class="col-sm-9">
                <input asp-for="Email" class="form-control" />
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Complete Order" class="btn btn-primary" />
        </div>
    </form>
</div>
