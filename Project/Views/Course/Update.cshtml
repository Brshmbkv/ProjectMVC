@model Course

<div class="container mt-4" style="width: 800px;">
    <form asp-action="Update" method="post" role="form">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-3"></label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="Name" value="@Model.Name"/>
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="ShortDescription" class="col-sm-3"></label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="ShortDescription" value="@Model.ShortDescription" />
            </div>
            <span asp-validation-for="ShortDescription" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Price" class="col-sm-3"></label>
            <div class="col-sm-9">
                <input type="number" class="form-control" name="Price" value="@Model.Price" />
            </div>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="ImageUrl" class="col-sm-3"></label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="Price" value="@Model.ImageUrl" />
            </div>
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="ImageThumbnailUrl" class="col-sm-3"></label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="Price" value="@Model.ImageThumbnailUrl" />
            </div>
            <span asp-validation-for="ImageThumbnailUrl" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="CourseId" />
        <div class="form-group row">
            <input type="submit" value="Update" class="btn btn-primary" />
        </div>
    </form>
</div>