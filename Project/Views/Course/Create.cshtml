@model Course

<div class="container mt-4" style="width: 800px;">
    <form asp-action="Create" method="post" role="form">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-3"></label>
            <div class="col-sm-9">
                <input asp-for="Name" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="ShortDescription" class="col-sm-3"></label>
            <div class="col-sm-9">
                <input asp-for="ShortDescription" class="form-control" />
            </div>
            <span asp-validation-for="ShortDescription" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Price" class="col-sm-3"></label>
            <div class="col-sm-9">
                <input asp-for="Price" class="form-control" />
            </div>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="ImageUrl" class="col-sm-3"></label>
            <div class="col-sm-9">
                <input asp-for="ImageUrl" class="form-control" />
            </div>
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="ImageThumbnailUrl" class="col-sm-3"></label>
            <div class="col-sm-9">
                <input asp-for="ImageThumbnailUrl" class="form-control" />
            </div>
            <span asp-validation-for="ImageThumbnailUrl" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="IsCourseOfTheWeek" class="col-sm-3"></label>
            <div class="checkbox col-sm-9">
                <input asp-for="IsCourseOfTheWeek" />
            </div>
            <span asp-validation-for="IsCourseOfTheWeek" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="InStock" class="col-sm-3"></label>
            <div class="checkbox col-sm-9">
                <input asp-for="InStock" />
            </div>
            <span asp-validation-for="InStock" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="CategoryId" class="col-sm-3"></label>
            <div class="checkbox col-sm-9">
                <select asp-for="CategoryId"
                        asp-items="@ViewBag.Categories">
                </select>
            </div>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="CourseId" />
        <div class="form-group row">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>